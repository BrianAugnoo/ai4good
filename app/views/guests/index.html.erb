<div class="guest-auth-container">
  <div class="guest-auth-card">

    <div class="auth-header">
      <div class="icon-wrapper">
        <i class="fa-solid fa-users-viewfinder"></i>
      </div>
      <h2>Espace Groupe</h2>
      <p>Saisissez l'identifiant unique pour accéder à votre groupe.</p>
    </div>

    <%= form_with url: edit_guest_path(), local: true, method: :get, class: "auth-form", data: { turbo: false } do |f| %>

      <div class="form-group">
        <%= f.label :indentifiant, "Identifiant du groupe", class: "form-label" %>
        <%= f.text_field :indentifiant,
            required: true,
            class: "form-input",
            placeholder: "Ex : a4fg0",
            autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.submit "Acceder au groupe", class: "btn-submit-gradient" %>
      </div>

    <% end %>

    <div class="auth-footer">
      <%= link_to "Retour à l'accueil", root_path, class: "back-link" %>
    </div>

  </div>
</div>
