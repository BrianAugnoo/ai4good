<%= render "partial/back_button", page_name: "dashboard", page_path: admin_dashboard_path %>
<div data-controller="session search" class="group-container">
  <div class="search-bar">
    <input type="text" data-search-target="input" placeholder="Rechercher par nom ou établissement..." name="query">
  </div>
  <p>Sélectionner un groupe</p>
  <div class="groups">
    <%= render "groups/groups", groups: @groups, partial_path: "groups/group"%>
  </div>
  <%= form_with url: eval_sessions_path(@session) do |f| %>
    <%= f.hidden_field :group_id, id: "group-input", required: true %>
    <%= f.submit "Créer une session", class: "join-btn" %>
  <% end %>
</div>
