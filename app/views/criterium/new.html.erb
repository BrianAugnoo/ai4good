<div class="container px-2 py-4">
  <div class="bg-white shadow-sm rounded-4 p-3">
    <h5 class="text-center text-primary mb-4">30%</h5>
    <%= form_with  url: criterium_index_path(criterium_category_id: @criterium_category.id, group_id: @group_id), local: true do |f| %>

      <% CriteriumCategory.categories[@criterium_category.name].each do |key, value| %>
        <div class="mb-3">
          <%= f.label key.to_sym, "#{key}: #{value}", class: "form-label small fw-semibold" %>
          <%= f.select key.to_sym, (1..10).to_a, class: "form-control form-control-sm", required: true %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Evaluer", class: "btn btn-primary btn-sm " %>
      </div>

    <% end %>
  </div>
</div>
