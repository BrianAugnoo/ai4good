<% age_sections = AgeSection.all %>
<div class="content age_sections" id="setting-content">
  <% age_sections.order(:value).each do |age_section| %>
    <div class="age-section age-section-card">

      <h3 class="section-title"><%= age_section.value %> ans</h3>

      <div class="examiners-list">
        <% if age_section.age_examiners.each.any? %>
          <% age_section.age_examiners.each do |age_examiner| %>
            <div class="examiner-row">
              <h5 class="examiner-name"><%= age_examiner.examiner.name %></h5>
              <%= button_to "âœ•", age_examiner_path(id: age_examiner.id), method: :delete, class: "btn-delete-icon" %>
            </div>
          <% end %>
        <% else %>
          <p class="empty-state">Aucun examinateur</p>
        <% end %>
      </div>

      <button type="button" class="btn btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#ags-<%= age_section.id%>">
        Ajouter un examinateur
      </button>
    </div>

    <%= render "settings/age_examiner", age_section: age_section %>
  <% end %>
</div>
