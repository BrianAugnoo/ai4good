<% examiners = Examiner.order(permited: :desc) %>
<div class="content" id="setting-content" data-controller="examiner-permit">
  <h1>Liste des examinateurs</h1>
  <% examiners.each do |examiner| %>
    <div class="examiner">
      <h3>Nom : <span><%= examiner.name %></span></h3>
      <h3>Email : <span><%= examiner.email %></span></h3>
      <label class="switch">
        <input
          type="checkbox"
          data-examiner-permit-target="toggle"
          data-column="permited"
          data-id="<%= examiner.id %>"
          <%= "checked" if examiner.permited %>
        >
        <span class="slider"></span>
      </label>
      <%= link_to "Modifier", "#", class: "btn btn-secondary" %>
      <%= button_to "Supprimer", custom_examiner_path(examiner), method: :delete, class: "btn btn-danger", data: { turbo: true } %>
    </div>
  <% end %>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-examiner">
    CrÃ©er un examinateur
  </button>
  <%= render "settings/add_examiner" %>
</div>
