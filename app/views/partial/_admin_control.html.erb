<div id="admin-control">
  <% status ||= Session.status %>
  <% if Session.connection_completed? %>
    <% if status == 0 || status == 2%>
      <%= form_with url: valid_session_path, method: :patch do |f| %>
        <%= f.hidden_field :id, value: Session.first.id %>
        <%= f.submit "Terminer la session", class: "join-btn" %>
      <% end %>
    <% elsif status == 1  %>
      <p>En attente de la soumission des examinateurs...</p>
    <% elsif status == 3 %>
      <p>Session terminÃ©e ! <%= link_to "Retour au tableau de bord", admin_dashboard_path %></p>
    <% end %>
  <% end %>
</div>
