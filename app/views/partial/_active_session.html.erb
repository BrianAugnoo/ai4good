<% group = Session.first.group %>
<div class="timer" data-controller="timer">0:00</div>
<div class="active-session">
  <div class="group_info">
    <p>Établissement : <span><%= group.etablished %></span></p>
    <p>Nom du groupe : <span><%= group.name %></span></p>
    <p>Thème : <span><%= group.theme %></span></p>
    <p>Membres :</p>
    <ul>
      <% group.members.each do |member| %>
        <li><%= member.name %></li>
      <% end %>
    </ul>
  </div>
</div>
