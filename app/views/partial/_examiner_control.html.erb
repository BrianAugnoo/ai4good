<div id="<%= "examiner-control-#{ examiner.id }"%>">
  <% if Session.connection_completed? %>
    <% if Session.status == 3 %>
      <p>Session terminée <%= link_to "Retour au tableau de bord", examiner_dashboard_path %></p>
    <% elsif Session.status == 2 %>
      <p>En attente de la fin de la session</p>
    <% elsif examiner.submit_eval? %>
      <p>En attente de toutes les évaluations</p>
    <% else %>
      <%= form_with url: criterium_index_path() do |f| %>
        <% Criterium.criteria_list.each do |criterium_name| %>
          <%= f.label criterium_name.to_sym, criterium_name %>
          <%= f.text_field criterium_name.to_sym %>
        <% end %>
        <%= f.submit "Valider" %>
      <% end %>
    <% end %>
  <% end %>
</div>
